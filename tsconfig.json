{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "es6" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },

  "include": [
    "src/**/*.ts",
    "features/**/*.ts"
  ],

  "exclude": [
    "node_modules"
  ]
}
